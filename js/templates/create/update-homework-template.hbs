    <div class="create-menu-item" style="width:100%;">
        <div class="text" style="width:100%;">
            <div id="title-field" class="field">
                <input id="title" class="input text-title" type="text" placeholder="{{homework.title}}" style="text-align:left;"/>
            </div>
        </div>
    </div>
    <div id="" class="create-menu-item" style="overflow:hidden;">
        <div class="text">Type</div>
        <div class="right-text" style="right: -18px;">
            <div class="toggleh">
                <!-- <div class="switch-toggle switch-ios switch-type no-border">
                    <input id="week91" name="view9" type="radio" checked="">
                    <label id="daily" for="week91" onclick="">Daily</label>

                    <input id="month92" name="view9" type="radio">
                    <label id="project" for="month92" onclick="">Test/Project</label>

                    <a></a>
                </div> -->
                <label id="daily" style="z-index:10; width:50%; position:absolute; left:3px; line-height:36px; font-weight: bold; text-align:center;" for="hwType" onclick="">Daily</label>
                <label id="project" style="z-index: 10; width:50%; position: absolute;right:0px;line-height: 36px; font-weight:bold; text-align:center;" for="hwType" onclick="">Test/Project</label>
                <input id="hwType" type="checkbox" name="toggle9h" class="toggle9h">
            </div>
        </div>
    </div>
    <div id="start-wrapper" class="create-menu-item">
        <div class="text">Assigned</div>
        {{#if homework.isMobile}}
        <div id="start" class="right-text">Touch ...</div>
        {{else}}
        <div class="right-arrow" style="width:80%;">
            <div id="start-date-field" class="field">
                <input id="start" class="input text-field" type="text" placeholder="MM/DD/YY" />
                <i class="icon-calendar"></i>
            </div>
        </div>
        {{/if}}
    </div>
    <div id="end-wrapper" class="create-menu-item">
        <div class="text">Due</div>
        {{#if homework.isMobile}}
        <div id="end" class="right-text">Touch ...</div>
        {{else}}
        <div class="right-arrow" style="width:80%;">
            <div id="end-date-field" class="field">
                <input id="end" class="input text-field" type="text" placeholder="MM/DD/YY" />
                <i class="icon-calendar"></i>
            </div>
        </div>
        {{/if}}
    </div>
    <!-- COMMENT OUT FOR NOW <div class="create-menu-item">
        <div class="text">Repeat</div>
        <div id="repeat" class="right-text">Never</div>
    </div> -->
    <div id="until" class="create-menu-item hidden">
        <span>Repeat Until</span>
        <div class="text">
            <div id="repeat-until-field" class="field">
                <input id="repeat-until" class="input text-title" type="text" placeholder="MM/DD/YYYY" style="text-align:right;"/>
            </div>
        </div>
    </div>
    <div class="create-menu-item">
        <div class="text">Reminder</div>
        <div id="reminder" class="right-text">
            <span class="reminder-val">Never</span>
            <i class="icon-right-open"></i>
        </div>
    </div>
    <div id="create-message-field" class="create-menu-item">
        <div id="message-field" class="field">
            <textarea id="note" class="input text-area" rows="3" placeholder="Note/Message"></textarea>
        </div>
    </div>
    <div id="cancel-event" class="create-menu-item" >
        <div class="text">Cancel Homework</div>
    </div>

</div>

<div id="repeat-picker" class="time-picker hidden">
    <div class="bg"></div>
    <div class="box-wrapper">
        <div class="title-wrapper">Repeat</div>
        <div class="time-wrapper">
            <div class="time">
                <span>Never</span>
                <div class="checked"><i class="icon-fontello-ok"></i>
                </div>
            </div>
            <div class="time">
                <span>Every Day</span>
                <div class="checked hidden"><i class="icon-fontello-ok"></i>
                </div>
            </div>
            <div class="time">
                <span>Every Week</span>
                <div class="checked hidden"><i class="icon-fontello-ok"></i>
                </div>
            </div>
            <div class="time">
                <span>Every 2 Weeks</span>
                <div class="checked hidden"><i class="icon-fontello-ok"></i>
                </div>
            </div>
            <div class="time">
                <span>Every Month</span>
                <div class="checked hidden"><i class="icon-fontello-ok"></i>
                </div>
            </div>
            <div class="time" style="border-bottom: none;">
                <span>Every Year</span>
                <div class="checked hidden"><i class="icon-fontello-ok"></i>
                </div>
            </div>
        </div>
        <div class="bottom-menu">
            <div id="repeat-cancel" class="cancel">Cancel</div>
            <div id="repeat-ok" class="ok">OK</div>
        </div>
    </div>
</div>


